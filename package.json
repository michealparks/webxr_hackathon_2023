		"@threlte/extras": "^7.5.1",
		"@threlte/flex": "^0.1.0",
		"@threlte/rapier": "^1.1.2",
		"@threlte/theatre": "^2.1.3",
		"@threlte/xr": "^0.0.12",
		"@types/three": "^0.158.2",
		"three": "^0.158.0",
		"vite-plugin-mkcert": "^1.16.0"
	}
}
